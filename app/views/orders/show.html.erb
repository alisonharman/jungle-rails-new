<section class="orders-show">

<% line_items = LineItem.all.joins(:order).where(orders: {id: @order.id}) %>

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th >Product</th>
        <th>Quantity</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <% line_items.each do |item| %>
        <%= render 'item', product: Product.find(item.product_id), quantity: item[:quantity].to_i, total: item[:total_price_cents] %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
